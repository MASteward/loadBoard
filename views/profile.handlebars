<section id="profile" class="page-container">
  <h1 class="page-title">Posted Freight</h1>
  <div class="all_loads">
    {{#each loads}}
      <div class="collapsible-menu" id="menu{{@index}}">
        <i class="im im-plus-circle"></i>
        <p>{{trailer}}</p>
        {{#each Locations}}
          {{#unless pickup}}
            <p>{{city}}, {{state}}</p>
          {{/unless}}
        {{/each}}
      </div>
      <div class="profile-load">
        {{!-- <div class="profile-btn-container"> --}}

        {{!-- </div> --}}
        <div class="information-container">

          <form class="profile_delete-load" action="/delete" method="POST">
            <input type="hidden" name="id" value="{{id}}">
            <input class="delete-btn" type="submit" name="submit" value="Delete">
          </form>

          {{>info-container}}

          <div>
            <div>
              <span>Additional Information:</span>
              <p class="instructions">{{instructions}}</p>
            </div>
          </div>

        </div>


      </div>
    {{else}}
      <p>No Load Available</p>
    {{/each}}
  </div>
</section>
