<div id="modal" class="popup-modal">
  <div class="modal__container">
    <header class="modal__header">
      <h3>Login</h3>
      <button type="button" name="button" id="modal__close">x</button>
    </header>
    <section class="modal__content">
      <div id="modal__login">
        <form class="modal__login-form" id="modal__form">
          <div class="modal__email-container">
            <label for="email">Email: </label>
            <input class="login-email" type="email" name="email" value={{email}}>
          </div>
          <div class="modal__password-container">
            <label for="login-pass">Password: </label>
            <input class="login-pass" type="password" name="password" value={{password}}>
          </div>


          <input type="submit" name="login" id="login-btn" value="Login">
        </form>

      </div>
    </section>
    <footer class="modal__footer">
      <a href="/signup">Sign up for an account <span>here</span>.</a>
    </footer>
  </div>
</div>
