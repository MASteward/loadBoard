<div class="information-container">
  <div>
    <p><span>Trailer Requirement:</span> {{trailer}}</p>
  </div>
  <div>
    <p><span>Load Material:</span> {{material}}</p>
  </div>
  {{#if license}}
    <div>
      <p><span>Special Licenses:</span> {{license}}</p>
    </div>
  {{/if}}
  <div>
    <p><span>Compensation:</span> <span class="monetary-sign">$</span>{{purse}}</p>
  </div>

  <div>
    <p><span>Due Date:</span> {{deadline}}</p>
  </div>
  {{#each Locations}}
    {{#if pickup}}
      <div class="address">
        <p><span>Pickup Location:</span> {{street}}, {{city}}, {{state}} {{zip}}</p>
      </div>
    {{else}}
      <div class="address">
        <p><span>Dropoff Location:</span> {{street}}, {{city}}, {{state}} {{zip}}</p>
      </div>
    {{/if}}
  {{/each}}
</div>
