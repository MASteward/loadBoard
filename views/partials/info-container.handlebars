<div>
  <p><span>Trailer Requirement:</span> {{trailer}}</p>
</div>
<div>
  <p><span>Load Material:</span> {{material}}</p>
</div>
{{#if license}}
  <div>
    <p><span>Special Licenses:</span> {{license}}</p>
  </div>
{{/if}}
<div>
  <p><span>Compensation:</span> <span class="monetary-sign">$</span>{{purse}}</p>
</div>

<div>
  <p><span>Due Date:</span> {{deadline}}</p>
</div>
{{#each Locations}}
  {{#if pickup}}
    <div class="address">
      <span>Pickup Location:&nbsp;</span><div><p>{{street}}</p> <p>{{city}}, {{state}} {{zip}}</p></div>
    </div>
  {{else}}
    <div class="address">
      <span>Dropoff Location:&nbsp;</span><div><p>{{street}}</p> <p>{{city}}, {{state}} {{zip}}</p></div>
    </div>
  {{/if}}
{{/each}}
